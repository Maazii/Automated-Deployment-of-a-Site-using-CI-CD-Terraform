pipeline {
    agent any
    
    stages {
        stage("Check Terraform Version"){
            steps{
                bat "terraform version"
            }
        }
        stage("Find, Initialize, and Plan Infrastructure"){
            steps{
                bat '''
                    cd .\\infrastructure-code
                    if exist .terraform (
                        echo Terraform-Already-Initialized
                        terraform validate
                        terraform plan    
                    )
                    else (
                        terraform init
                        terraform validate
                        terraform plan
                    )
                '''
            }
        }
    }
}