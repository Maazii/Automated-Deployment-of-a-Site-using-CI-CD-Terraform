pipeline {
    agent any

    environment {
        TF_CLI_ARGS="-no-color"
    }
    
    stages {
        stage("Check Terraform Version"){
            steps{
                bat "terraform version"
            }
        }
        stage("Run Powershell"){
            steps{
                powershell '''
                    cd .\\infrastructure-code
                    if (Test-path .terraform) {
                        Write-Output "Terraform already initialized!"
                        terraform validate
                        terraform plan
                    }
                    else {
                        terrafrom init
                        terraform validate
                        terraform plan
                    }
                '''
            }
        }
    }
}